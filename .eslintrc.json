{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "dist",
    ".eslintrc.cjs",
    ".next",
    "node_modules", 
    "out",
    "src/**/*"
  ],
  "rules": {}
}
