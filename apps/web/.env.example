# Web Application Environment Variables

# Application URLs
NEXT_PUBLIC_APP_URL=https://asmbli.netlify.app
NEXT_PUBLIC_API_URL=https://asmbli.netlify.app/api

# Database Configuration (provided by Netlify)
DATABASE_URL=${NETLIFY_DATABASE_URL}

# Authentication
JWT_SECRET=your-jwt-secret-here
AUTH_PROVIDER=netlify-identity
NEXT_PUBLIC_NETLIFY_SITE_URL=https://asmbli.netlify.app

# Chat Service Configuration
CHATMCP_ENDPOINT=https://api.chatmcp.com
DEFAULT_MODEL=gpt-4
NEXT_PUBLIC_DEFAULT_PROVIDER=openai

# Analytics & Monitoring
ENABLE_ANALYTICS=true
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_CHAT_STREAMING=true
NEXT_PUBLIC_ENABLE_DESKTOP_DOWNLOAD=false

# API Rate Limiting
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Development/Debug
NODE_ENV=production
NEXT_PUBLIC_DEBUG_MODE=false